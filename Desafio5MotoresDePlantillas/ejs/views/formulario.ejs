	<div class="container-fluid">
		<span class="navbar-brand mb-0 h1 text-white">Formulario</span>
	</div>
</nav>

<div class="container">
	<h1 style="color: azul">Formulario</h1>

	<form action="/products" method="post" name="products">
		<div class="form-group">
			<label for="title"><b>Nombre del Producto</b></label>
			<input
				type="text"
				name="title"
				id="productName"
				placeholder="ej: Calculadora"
				class="form-control"
			/>
		</div>
		<div class="form-group">
			<label for="price"><b>Precio del Producto</b></label>
			<input
				type="number"
				name="price"
				id="productPrice"
				placeholder="ej: 700"
				class="form-control"
			/>
		</div>
		<div class="form-group">
			<label for="thumbnail"><b>Icono del Producto</b></label>
			<input
				type="url"
				name="thumbnail"
				id="productPhoto"
				placeholder="ej: url"
				class="form-control"
			/>
		</div>
		<div class="d-flex justify-content-center">
			<button class="btn btn-primary mt-3" id="btnSubmit">Enviar</button>
		</div>
	</form>
</div>
