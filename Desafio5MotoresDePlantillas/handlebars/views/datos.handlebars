<nav class="navbar bg-dark">
	<div class="container-fluid">
		<span class="navbar-brand mb-0 h1 text-white">Navbar</span>
	</div>
</nav>

<div class="container mt-3">
	<h1>Formulario</h1>
	<form action="/api/products" method="post" name="products">
		<div class="form-group mt-3">
			<label for="productName" class="form-label">Nombre del Producto</label>
			<input
				type="text"
				id="productName"
				name="productName"
				class="form-control"
				value={{title}}
			/>
		</div>
		<div class="form-group mt-3">
			<label for="productPrice" class="form-label">Precio del Producto</label>
			<input
				type="text"
				id="productPrice"
				name="productPrice"
				class="form-control"
				value={{price}}
			/>
		</div>
		<div class="form-group mt-3">
			<label for="productPhoto" class="form-label">Foto URL del Producto</label>
			<input
				type="text"
				id="productPhoto"
				name="productPhoto"
				class="form-control"
				value={{thumbnail}}
			/>
		</div>
		<div class="d-flex justify-content-center">
			<button class="btn btn-primary mt-3">Agregar Producto</button>
		</div>
	</form>
</div>